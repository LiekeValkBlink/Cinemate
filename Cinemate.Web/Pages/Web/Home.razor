@page "/"
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<Home> Localizer



  <PageTitle>Cinemate</PageTitle>

<div class="home-layout-inner">
    <h1>@Localizer["Nu in de bioscoop"]</h1>




    <DateSelector OnDateSelected="HandleDateSelected"></DateSelector>

    <MovieAgenda SelectedDate="@selectedDate"></MovieAgenda>
</div>

@code {
    
    private DateTime selectedDate;

    private async Task HandleDateSelected(DateTime date)
    {
        selectedDate = date;
    }
    

}

